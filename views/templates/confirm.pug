extends  ../layout/index
block contenido
    div#login.p-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes
            span.font-normal Raices
    div(class="mx-auto")
        p(class="text-xl font-bold text-center my-10 capitalize")=view
    div(class="bg-white shadow p-4 rounded-lg text-center uppercase w-1/2 mx-auto my-10")
        p(class= error ? 'bg-red-500' : 'bg-green-500').py-2.px-5.rounded-lg.text-white=message

        if !error 
            a(href="/auth/login" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded my-3 block text-center") Iniciar Sesion